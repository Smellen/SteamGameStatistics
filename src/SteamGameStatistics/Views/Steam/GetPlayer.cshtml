@model SteamGameStatistics.Application.DTOs.PlayerDto

@{
    ViewData["Title"] = "SteamUser";
    var lastLogin = Model.GetLastLoggedInDate();
    var profileCreated = Model.GetProfileCreateDate();
}

@Html.Partial("_SteamBack")

@if (Model != null)
{
    <h1>@Model.Personaname</h1>

    <div>
        <hr />
        <img src="@Url.Content(Model.Avatarfull.AbsoluteUri)" alt="Image" />

        <dl class="row">
            <dt class="col-sm-2">
                Steam id
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Steamid)
            </dd>

            <dt class="col-sm-2">
                Country
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Loccountrycode)
            </dd>


            <dt class="col-sm-2">
                Last Login
            </dt>
            <dd class="col-sm-10">
                @lastLogin
            </dd>

            <dt class="col-sm-2">
                Profile Created
            </dt>
            <dd class="col-sm-10">
                @profileCreated
            </dd>
        </dl>
    </div>
}
else
{
    <h1>No user found.</h1>
}