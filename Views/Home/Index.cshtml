@model SteamGameStatistics.Models.Steam.User

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
</div>

<div class="text-center">
    @if (Model != null)
    {
        <h1>@Model.Personaname</h1>

        <div>
            <hr />
            <img src="@Url.Content(Model.Avatarfull.AbsoluteUri)" alt="Image" />
        </div>
    }
    else
    {
        <h1>No user found.</h1>
    }
</div>

<div class="text-center">
    <p>Learn more about steam game statistics from <a href="https://github.com/Smellen">Github</a>.</p>
</div>
